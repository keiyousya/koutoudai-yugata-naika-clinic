<style is:global>
  .twilight-bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      #1e3a5f 0%,
      #2a4a6e 30%,
      #4a6a8a 50%,
      #d4886a 75%,
      #e8a87c 100%
    );
    z-index: -2;
  }

  .twilight-bg::before {
    content: "";
    position: absolute;
    top: -50%;
    right: -30%;
    width: 80%;
    height: 150%;
    background: radial-gradient(
      ellipse at center,
      rgba(230, 126, 34, 0.15) 0%,
      transparent 70%
    );
  }

  .twilight-bg::after {
    content: "";
    position: absolute;
    bottom: -20%;
    left: -20%;
    width: 60%;
    height: 80%;
    background: radial-gradient(
      ellipse at center,
      rgba(255, 180, 120, 0.2) 0%,
      transparent 70%
    );
  }

  /* Stars */
  .stars {
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }

  .star {
    position: absolute;
    width: 3px;
    height: 3px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    animation: twinkle 3s ease-in-out infinite;
  }

  .star.small {
    width: 2px;
    height: 2px;
    opacity: 0.7;
  }

  .star:nth-child(odd) {
    animation-delay: 0.5s;
  }

  .star:nth-child(3n) {
    animation-delay: 1s;
  }

  .star:nth-child(4n) {
    animation-delay: 1.5s;
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.4;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  /* Shooting Stars */
  .shooting-star {
    position: absolute;
    top: 15%;
    left: 70%;
    width: 80px;
    height: 2px;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.9));
    border-radius: 50%;
    transform: rotate(35deg);
    z-index: -1;
    opacity: 0;
    animation: shoot 6s ease-in-out infinite;
    animation-delay: 2s;
  }

  .shooting-star::before {
    content: "";
    position: absolute;
    right: 0;
    top: -1px;
    width: 4px;
    height: 4px;
    background: white;
    border-radius: 50%;
    box-shadow: 0 0 6px 2px rgba(255, 255, 255, 0.6);
  }

  .shooting-star-2 {
    top: 25%;
    left: 30%;
    width: 60px;
    transform: rotate(40deg);
    animation-delay: 5s;
  }

  @keyframes shoot {
    0% {
      opacity: 0;
      transform: rotate(35deg) translateX(0);
    }
    5% {
      opacity: 1;
    }
    15% {
      opacity: 0;
      transform: rotate(35deg) translateX(150px);
    }
    100% {
      opacity: 0;
      transform: rotate(35deg) translateX(150px);
    }
  }

